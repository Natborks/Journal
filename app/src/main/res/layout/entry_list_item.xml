<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

                <!-- TextView that displays the title -->
                <TextView
                    android:id="@+id/tv_entryTitle"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/primary_text_light"
                    tools:text="Description" />

                <!-- TextView that displays the description -->
                <TextView
                    android:id="@+id/tv_entryDescription"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/primary_text_light"
                    tools:text="Description" />

                <!-- TextView that displays the update date -->
                <TextView
                    android:id="@+id/tv_createdAt"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/primary_text_light"
                    tools:text="11/11/1111" />

        </LinearLayout>

</LinearLayout>